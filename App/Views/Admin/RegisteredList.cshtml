@{
    ViewData["Title"] = "미등록 사용자 관리";
    Layout = "~/Views/Shared/_LayoutDataView.cshtml";
}

@using App.Model;
@model List<Users>;

<div class="DataViewBody bg-light border rounded-3">
    <div class="DataViewContent list-group list-group-flush border-bottom scrollarea">
        <div class="DataViewHeader">
            <h3>미등록 사용자 관리</h3>
            <hr />

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="button" class="btn btn-outline-primary btn-sm" onclick="locationAdminPage()">사용자
                    관리</button>
            </div>
        </div>

        <div class="table-responsive bg-white">
            <table class="table table-hover table-bordered">
                <thead class="table-primary">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">이메일</th>
                        <th scope="col">이름</th>
                        <th scope="col">부서</th>
                        <th scope="col">연락처</th>
                    </tr>
                </thead>
                <tbody style="overflow: auto;">
                    @{
                        if (Model.Count < 1)
                        {
                            <tr>
                                <td colspan="8" id="DataViewNull" class='text-center DataViewNull'>
                                    <h5>조회된 데이터가 없습니다.⚠</h5>
                                </td>
                            </tr>
                        }

                        foreach (var item in Model)
                        {
                            <tr>
                                <td id="USER_ID">@item.USER_CD</td>
                                <td id="USER_EMAIL">@item.USER_EMAIL</td>
                                <td id="USER_NM">@item.USER_NM</td>
                                <td id="USER_DEPT">@item.USER_DEPT</td>
                                <td id="USER_CONTACT">@item.USER_CONTACT</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>