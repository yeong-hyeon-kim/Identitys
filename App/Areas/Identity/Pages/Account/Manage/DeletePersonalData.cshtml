@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "개인정보 삭제";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4 class="text-light">개인정보 삭제</h4>

<div class="alert alert-danger" role="alert">
    <p>
        <strong class="text-dark">개인정보를 삭제하면 복구 할 수 없습니다.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="mb-3">
                <label asp-for="Input.Password" class="text-light"></label>
                <input asp-for="Input.Password" class="form-control bg-dark text-light" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">데이터 삭제</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}