@page
@model LoginModel
@{
    ViewData["Title"] = "로그인";
    Layout = "~/Views/Shared/_LayoutSignin.cshtml";

    string returnUrl = $"~/Home/Index";
}

<main class="form-signin" style="align-content:center">
    <form asp-route-returnUrl="@returnUrl" id="account" method="post">
        @*<svg class="mb-4" width="128" height="128"><use xlink:href="#NET" /></svg>*@
        <h1>Identitys</h1>
        <h1 class="h3 mb-3 fw-normal">로그인이 필요합니다.</h1>

        <div class="form-floating">
            <input asp-for="Input.Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label asp-for="Input.Email" for="floatingInput">이메일</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label asp-for="Input.Password" for="floatingPassword">비밀번호</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="checkbox mb-3">
            <label asp-for="Input.RememberMe">
                <input asp-for="Input.RememberMe" type="checkbox"> 로그인 유지
            </label>

            <label>|</label>

            <label>
                <a asp-area="Identity" asp-page="/Account/ForgotPassword">비밀번호 초기화</a>
            </label>
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">로그인</button>
        <p class="mt-5 mb-3 text-muted">&copy; Identitys @DateTime.Now.Year </p>
    </form>
</main>
